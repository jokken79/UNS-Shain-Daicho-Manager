# ======================
# UNS Shain Daicho Manager
# Environment Configuration
# ======================

# Application
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=uns_admin
DB_PASSWORD=uns_password
DB_DATABASE=uns_shain_daicho
DB_SYNC=true
DB_LOGGING=false

# JWT Authentication
JWT_SECRET=UNS-Shain-Daicho-Secret-Key-Change-In-Production

# Email Notifications (SMTP)
# Configure these to enable email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=UNS System <noreply@uns.co.jp>

# Admin email for receiving alerts
ADMIN_EMAIL=admin@uns.co.jp
